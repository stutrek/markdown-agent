{
	"name": "mdagent",
	"version": "0.0.1",
	"description": "Define AI agents for Ollama using only a single markdown file",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"bin": {
		"mdagent": "dist/cli/mdagent.js"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
