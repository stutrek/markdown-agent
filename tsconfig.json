{
	"extends": "@tsconfig/recommended",
	"exclude": ["**/*.spec.ts", "**/*.spec.tsx"],
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"declarationMap": true,
		"lib": ["esnext", "dom", "dom.iterable", "es2023"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"target": "es2022",
		"paths": {
			"@games/*": ["./packages/*"],
			"@/*": ["./packages/site/src/*"]
		}
	}
}
